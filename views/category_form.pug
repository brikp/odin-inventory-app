extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(
        type='text',
        placeholder='Type in the name of the category'
        name='name'
        value=(category === undefined ? '' : category.name),
        required=true
      )
    div.form-group
      label(for='description') Description:
      input#name.form-control(
        type='text',
        placeholder='Category description'
        name='description'
        value=(category === undefined ? '' : category.description),
        required=true
      )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg